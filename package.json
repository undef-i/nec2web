    "resize-observer-polyfill": "^1.5.1",
    "three": "^0.182.0",
    "vfonts": "^0.0.3",
    "vue": "^3.5.24",
    "vue-chartjs": "^5.3.3",
    "vue-echarts": "^8.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.23",
    "daisyui": "^5.5.14",
    "postcss": "^8.5.6",
